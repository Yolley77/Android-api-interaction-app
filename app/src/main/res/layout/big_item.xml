<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BigItemFragment">

    <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp" app:srcCompat="@android:drawable/btn_star"
            android:id="@+id/bigGraphic" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="37dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bigName"/>
    <TextView
            android:text="TechName"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/bigName"
            app:layout_constraintBottom_toTopOf="@+id/bigHelptext" android:textSize="18sp"
            android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="124dp"/>
    <TextView
            android:text="TechHelptext"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/bigHelptext"
            android:textColor="@android:color/tertiary_text_dark" android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="124dp"
            android:layout_marginBottom="232dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>